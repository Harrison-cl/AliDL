{
  "manifest_version": 3,
  "name": "AliDL - Video Downloader",
  "version": "1.0.0",
  "description": "Download videos from AliExpress and Alibaba",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.aliexpress.com/*",
      "*://*.aliexpress.us/*",
      "*://*.alibaba.com/*",
      "*://*.alicdn.com/*",
      "*://*.aliexpress.co.uk/*",
      "*://*.aliexpress.ru/*",
      "*://*.aliexpress.co.jp/*"
    ],
    "js": ["content_script.js"],
    "css": ["content.css"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.us/*",
    "*://*.alibaba.com/*",
    "*://*.alicdn.com/*",
    "*://*.aliexpress.co.uk/*",
    "*://*.aliexpress.ru/*",
    "*://*.aliexpress.co.jp/*"
  ]
}