{
  "manifest_version": 3,
  "name": "AliDL",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab",
    "downloads",
    "scripting"
  ],
  "content_scripts": [{
    "matches": [
      "*://*.aliexpress.com/*",
      "*://*.aliexpress.us/*",
      "*://*.alibaba.com/*",
      "*://*.alicdn.com/*"
    ],
    "js": ["content_script.js"]
  }],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*.aliexpress.com/*",
    "*://*.aliexpress.us/*",
    "*://*.alibaba.com/*",
    "*://*.alicdn.com/*"
  ]
}